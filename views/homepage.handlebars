
{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by: {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-6">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
