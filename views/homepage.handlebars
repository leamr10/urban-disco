
{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}} {{post.user.name}} on {{post.date_created}}</a>
    </h2>
  </div>
  <div class="col-md-6">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}

